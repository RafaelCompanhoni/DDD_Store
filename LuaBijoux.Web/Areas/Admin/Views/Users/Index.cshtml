@using LuaBijoux.Core.DomainModels.Identity;
@model IEnumerable<AppUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Usuários</h2>

<div class="panel panel-default">
    <div class="panel-heading" data-toggle="collapse" data-target="#collapse-options">
        <span class="panel-title panel-heading"><i class="glyphicon glyphicon-filter"></i> Filtros</span>
    </div>

    <div id="collapse-options" class="panel-collapse collapse">
        <div class="panel-body">
            CONFIG
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>@Ajax.ActionLink("Nome", "Users", new { sortBy = "Nome" }, new AjaxOptions { UpdateTargetId = "tableBody" })</th>
                    <th>Email</th>
                    <th></th>
                </tr>    
            </thead>
                
            <tbody id="tableBody">
                @Html.Action("Users")   
            </tbody>
        </table>
    </div>

    <div class="panel-footer">
        <a href="@Url.RouteUrl(new { controller = "Users", action = "Create", category = "users", subcategory = "users" })" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>  Criar Novo Usuário</a>
    </div>
</div>

@section Optional {

    @{ Html.RenderPartial("_RenderNotificationModal"); }

}
